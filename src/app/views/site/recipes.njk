{% extends 'layout.njk' %}

{% block head %}
    <title>Foodfy - Recipes</title>
{% endblock %}

{% block style %}
    <link rel="stylesheet" href="/stylesSite.css">
{% endblock %}

{% block header %}    
        <a href="/site/index"><img src="/logo_black.png" alt=""></a>
        <div class="menu">
            <a href="#">Sobre</a>
            <a href="/site/recipes">Receitas</a>
            <a href="/site/chefs">Chefs</a>
        </div>

        <form action="#" method="GET">
            <input
                type="text"
                name="filter"
                placeholder="Buscar uma receita"
                value={{filter}}
            >
            <button type="submit">Buscar</button>    
        </form>
{% endblock header %}


{% block content %}

      <main>        
        <div class="content">
            {% for item in items %}
            <div class="card" id="{{ item.title }}">
                <a href="/recipes/{{item.index}}"><img src="{{ item.image }}" alt="Imagens de {{ item.title }}"></a>
                <h4 class="name_recet">{{ item.title }}</h4>
                <p class="name_chef">{{ item.author }}</p>
            </div>
            {% endfor %}
        </div>
    </main>

{% endblock %}